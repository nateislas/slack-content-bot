# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-level-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_WORKSPACE_DOMAIN=your-workspace-subdomain
MIN_STRENGTH_TO_POST=medium
MAX_BUFFER_SIZE=20
EVALUATION_THRESHOLD=3
CONVERSATION_GAP_MINUTES=15


# Channel IDs (get these from Slack - right click channel > View channel details > scroll to bottom)
# Comma-separated list of channels to watch
WATCH_CHANNEL_IDS=C0123456789,C1111111111
CONTENT_IDEAS_CHANNEL_ID=C9876543210

# AI Configuration (Choose one provider)
# Valid values: google, openai, anthropic
LLM_PROVIDER=google
# Optional: Override default model
# LLM_MODEL=gemini-2.5-flash-lite-preview-09-2025

# Provider Keys (only the one you use is required)
GOOGLE_API_KEY=your-gemini-key
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key

# Creativity (0.0 = Focused, 1.0 = Creative)
TEMPERATURE=0.7

# Optional: Privacy settings
BLOCKED_KEYWORDS=confidential,nda,salary,valuation,runway
